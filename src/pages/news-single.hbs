                        </div>
                    </div>
                </div>
                {{> mailing }}
            </div>
        </section>
        <section class="news-other">
            <div class="container">
                <header class="news-other__header">
                    <div class="news-other__title-wrapper">
                        <h2 class="news-other__title js-title-animate">Похожие статьи</h2>
                    </div>
                    <a class="news-other__link button button--bordered js-section-animate" href="press-center.html">Смотреть все</a>
                </header>
                <ul class="news-other__list js-section-animate">
                    {{#each news }}
                        {{> news-card }}
                    {{/each}}
                </ul>
                <a class="news-other__mobile-link button button--bordered" href="press-center.html">Смотреть все</a>
            </div>
        </section>

    {{/content}}
{{/extend}}