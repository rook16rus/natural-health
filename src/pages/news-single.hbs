{{#extend "layout"}}
    {{#content "main"}}

        <section class="news-single">
            <div class="container">
                <div class="news-single__wrapper">
                    <a class="news-single__back-link" href="press-center.html">
                        <svg>
                            <use xlink:href="#slider-arrow"></use>
                        </svg>
                        <span>Пресс-центр</span>
                    </a>
                    <div class="news-single__content">
                        <time class="news-single__time" datetime="2022-07-22">22 июля</time>
