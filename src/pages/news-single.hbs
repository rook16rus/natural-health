                                обработанное».
                            </p>
                        </div>
                        {{> mailing }}
                    </div>
                </div>
            </div>
        </section>
        <section class="news-other">
            <div class="container">
                <header class="news-other__header">
                    <h2 class="news-other__title">Похожие статьи</h2>
                    <a class="news-other__link" href="press-center.html">Смотреть все</a>
                </header>
                <ul class="news-other__list">
                    {{#each news }}
                        {{> news-card }}
                    {{/each}}
                </ul>
            </div>
        </section>

    {{/content}}
{{/extend}}


