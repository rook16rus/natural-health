                                <div class="swiper-wrapper">
                                    {{#each slider }}
                                        <div class="slider__slide swiper-slide">
                                            <picture>
                                                <source data-srcset="{{this.imgWebp}}" type="image/webp">
                                                <img class="slider__img" src="{{this.img}}" data-fancybox="sliderImg" alt="Фото">
                                            </picture>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="swiper-pagination"></div>
                                {{> slider-navigation }}
                            </div>
