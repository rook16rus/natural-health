{{#extend "layout"}}
    {{#content "main"}}

        <section class="catalog">
            <div class="container">
                <div class="catalog__wrapper">
                    <header class="catalog__header js-section-animate">
                        {{> breadcrumbs data=breadcrumbs }}
                        <div class="catalog__title-wrapper">
                            <h1 class="catalog__title">Каталог</h1>
                        </div>
                        <div class="catalog__desc">
                            <p>
                                В нашем ассортименте более 300 полезных продуктов, приготовленных специально для вас
                            </p>
                        </div>
                        <div class="catalog__categories js-categories">
                            <ul class="catalog__categories-list js-categories-list">
                                {{#each categories }}
                                    <li class="catalog__categories-item">
                                        <input class="catalog__categories-radio visually-hidden js-categories-item" data-desc="testtesttesttest vtesttesttesttest test test testtest test test test test" type="radio" name="categories" id="categories{{this.id}}">
                                        <label class="catalog__categories-label tag" for="categories{{this.id}}">
                                            <svg>
                                                <use xlink:href="#{{this.img}}"></use>
                                            </svg>
                                            <span>{{this.text}}</span>
                                        </label>
                                    </li>
                                {{/each}}
                                <li class="catalog__categories-more-button-block js-categories-select">
                                    <div class="catalog__categories-more-button button button--bordered js-categories-select-header">
                                        <svg>
                                            <use xlink:href="#arrow-down-icon"></use>
                                        </svg>
                                        <span>Еще +<span id="categoriesCount">10</span></span>
                                    </div>
                                    <div class="catalog__categories-more-button-dropdown">
                                        {{#each moreCategories }}
                                            <div class="catalog__categories-more-button-item">
                                                <input class="catalog__categories-more-button-radio visually-hidden js-categories-item" data-desc="testtesttesttest vtesttesttesttest test test testtest test test test test" type="radio" name="categories" id="categories{{this.id}}">
                                                <label class="catalog__categories-more-button-label tag" for="categories{{this.id}}">
                                                    <svg>
                                                        <use xlink:href="#{{this.img}}"></use>
                                                    </svg>
                                                    <span>{{this.text}}</span>
                                                </label>
                                            </div>
                                        {{/each}}
                                    </div>
                                </li>
                            </ul>
                            <div class="catalog__categories-more-button-block catalog__categories-more-button-block--mobile js-categories-select">
                                <div class="catalog__categories-more-button button button--bordered js-categories-select-header">
                                    <svg>
                                        <use xlink:href="#arrow-down-icon"></use>
                                    </svg>
                                    <span>Категории</span>
                                </div>
                                <div class="catalog__categories-more-button-dropdown">
                                    <div class="catalog__categories-more-button-dropdown-header">
                                        <span>Категории</span>
                                        <button class="catalog__categories-more-button-close js-categories-select-close">
                                            <svg>
                                                <use xlink:href="#close-icon"></use>
                                            </svg>
                                        </button>
                                    </div>
                                    {{#each moreCategoriesMobile }}
                                        <div class="catalog__categories-more-button-item">
                                            <input class="catalog__categories-more-button-radio visually-hidden js-categories-item js-categories-item-mobile" data-desc="testtesttesttest vtesttesttesttest test test testtest test test test test" type="radio" name="categories" id="categories{{this.id}}">
                                            <label class="catalog__categories-more-button-label tag" for="categories{{this.id}}">
                                                <svg>
                                                    <use xlink:href="#{{this.img}}"></use>
                                                </svg>
                                                <span>{{this.text}}</span>
                                            </label>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="catalog__filter js-section-animate">
                        <div class="catalog__filter-count-block">
                            <span class="catalog__filter-count">310</span>
                            <span class="catalog__filter-count-desc">Найдено товаров</span>
                        </div>
                        <a class="catalog__filter-open-button" href="#filter">
                            <svg>
                                <use xlink:href="#filter-icon"></use>
                            </svg>
                            <span>Фильтр</span>
                        </a>
                        <form class="catalog__filter-form js-filter-form" action="#">
                            <div class="catalog__filter-form-top">
                                <button class="catalog__filter-button visually-hidden js-filter-reset" type="reset">
                                    <svg>
                                        <use xlink:href="#close-icon"></use>
                                    </svg>
                                    <span>Сбросить фильтр</span>
                                </button>
                            </div>
                            <div class="catalog__filter-form-bottom">
                                <div class="catalog__filter-select js-multi-select">
                                    <span class="catalog__filter-select-count-block js-multi-select-count-block">
                                        Выбрано&nbsp;<span class="js-multi-select-count">0</span>
                                    </span>
                                    <div class="catalog__filter-select-header js-multi-select-header">
                                        <span>Сортировать</span>
                                        <svg>
                                            <use xlink:href="#arrow-down-icon"></use>
                                        </svg>
                                    </div>
                                    <div class="catalog__filter-select-dropdown">
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogSort1" id="catalogSort1" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogSort1">Новинки</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogSort3" id="catalogSort2" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogSort2">Всегда пригодиться</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogSort3" id="catalogSort3" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogSort3">Хит продаж</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogSort4" id="catalogSort4" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogSort4">Скидка месяца</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="catalog__filter-select js-multi-select">
                                    <span class="catalog__filter-select-count-block js-multi-select-count-block">
                                        Выбрано&nbsp;<span class="js-multi-select-count">0</span>
                                    </span>
                                    <div class="catalog__filter-select-header js-multi-select-header">
                                        <span>Наличие товара</span>
                                        <svg>
                                            <use xlink:href="#arrow-down-icon"></use>
                                        </svg>
                                    </div>
                                    <div class="catalog__filter-select-dropdown">
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogHave1" id="catalogHave1" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogHave1">Новинки</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogHave3" id="catalogHave2" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogHave2">Всегда пригодиться</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogHave3" id="catalogHave3" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogHave3">Хит продаж</label>
                                        </div>
                                        <div class="catalog__filter-select-checkbox-wrapper">
                                            <input class="catalog__filter-select-checkbox visually-hidden checkbox" name="catalogHave4" id="catalogHave4" type="checkbox">
                                            <label class="catalog__filter-select-label" for="catalogHave4">Скидка месяца</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="catalog__filter-price js-price-container">
                                    <span class="catalog__filter-price-desc">Цена:</span>
                                    <div class="catalog__filter-price-range-wrapper">
                                        <div class="catalog__filter-price-input-wrapper">
                                            <input class="catalog__filter-price-input js-filter-price price-0" min="2800" max="39999" type="number" name="catalogPriceStart" value="2800" data-start-value="2800">
                                            <span>₽</span>
                                        </div>
                                        <div class="catalog__filter-price-range js-price-range"></div>
                                        <div class="catalog__filter-price-input-wrapper">
                                            <input class="catalog__filter-price-input js-filter-price price-1" min="2800" max="39999" type="number" name="catalogPriceEnd" value="39999" data-start-value="39999">
                                            <span>₽</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="switch">
                                    <input class="switch__checkbox visually-hidden" checked name="catalogPromotion" id="catalogPromotion" type="checkbox">
                                    <label class="switch__label" for="catalogPromotion">
                                        <span>Товары по акции</span>
                                        <span class="switch__label-switch"></span>
                                    </label>
                                </div>
                                <div class="switch">
                                    <input class="switch__checkbox visually-hidden" checked name="catalogPresent" id="catalogPresent" type="checkbox">
                                    <label class="switch__label" for="catalogPresent">
                                        <span>Товары с подарками</span>
                                        <span class="switch__label-switch"></span>
                                    </label>
                                </div>
                            </div>
                        </form>
                    </div>
                    {{> catalog-list data=catalog }}
                    {{> cards-navigation }}
                </div>
            </div>
        </section>
        <section class="catalog-post js-section-animate">
            <div class="container">
                {{> post }}
            </div>
        </section>
    {{/content}}
{{/extend}}