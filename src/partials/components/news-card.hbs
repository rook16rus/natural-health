<a class="news-card" href="news-single.html">
    <div class="news-card__img">
        <picture>
            <source data-srcset="{{this.imgWebp}}" type="image/webp">
            <img class="lazyload" data-src="{{this.img}}" alt="Фото новости">
        </picture>
    </div>
    <time class="news-card__time">{{this.time}}</time>
    <h3 class="news-card__title">{{this.title}}</h3>
    <p class="news-card__text">{{this.text}}</p>
</a>