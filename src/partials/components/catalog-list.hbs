{{#if slider }}
    <div class="catalog-list__slider swiper js-init-slider" data-slides="auto" data-space="20">
{{/if}}
<ul class="catalog-list{{#if mod }} {{mod}}{{/if}}{{#if slider }} swiper-wrapper{{/if}} js-section-animate">
    {{#each data }}
        <li class="catalog-list__item{{#if ../slider }} swiper-slide{{/if}}">
            <div class="catalog-list__img">
                <picture>
                    <source srcset="{{this.imgWebp}}" type="image/webp">
                    <img class="lazyload" data-src="{{this.img}}" alt="Фото товара">
                </picture>
                <picture>
                    <source srcset="{{this.imgWebp2}}" type="image/webp">
                    <img class="lazyload" data-src="{{this.img2}}" alt="Фото товара">
                </picture>
                {{#if hit }}
                    <span class="catalog-list__hit">
                            <svg>
                                <use xlink:href="#hit-icon"></use>
                            </svg>
                            <span>Хит продаж</span>
                        </span>
                {{/if}}
                <button class="catalog-list__basket">
                    <svg>
                        <use xlink:href="#backet-icon"></use>
                    </svg>
                </button>
            </div>
            <div class="catalog-list__content">
                <div class="catalog-list__price-block">
                    <h3 class="catalog-list__title"><a tabindex="-1" href="product.html">{{this.title}}</a></h3>
                    <span class="catalog-list__price">{{this.price}}</span>
                </div>
                <p class="catalog-list__text">{{this.text}}</p>
                <ul class="catalog-list__advantages">
                    <li>
                        <svg>
                            <use xlink:href="#shield-icon"></use>
                        </svg>
                    </li>
                    <li>
                        <svg>
                            <use xlink:href="#moon-icon"></use>
                        </svg>
                    </li>
                    <li>
                        <svg>
                            <use xlink:href="#bone-icon"></use>
                        </svg>
                    </li>
                </ul>
            </div>
        </li>
    {{/each}}
</ul>
{{#if slider }}
    </div>
{{/if}}