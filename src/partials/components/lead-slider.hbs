<div class="lead-slider{{#if mod }} {{mod}}{{/if}} swiper js-section-animate">
    <div class="swiper-wrapper">
        {{#each data }}
            <div class="lead-slider__slide swiper-slide">
                <div class="lead-slider__content">
                    <h3 class="lead-slider__title">{{this.title}}</h3>
                    <div class="lead-slider__text">
                        <p>{{{this.text}}}</p>
                    </div>
                </div>
                <div class="lead-slider__img">
                    <picture>
                        <source data-srcset="{{this.imgWebp}}" type="image/webp">
                        <img class="lazyload" data-src="{{this.img}}" alt="Фото">
                    </picture>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="lead-slider__navigation">
        {{#each dataNavigation }}
            <div class="lead-slider__navigation-item{{#if active }} active{{/if}}">
                <div class="lead-slider__navigation-icon">
                    <svg>
                        <use xlink:href="#star-icon"></use>
                    </svg>
                </div>
                <p class="lead-slider__navigation-text">{{{this.text}}}</p>
            </div>
        {{/each}}
    </div>
</div>